html
	head
		meta(name="viewport", content="width=device-width")
		title HTTP 404
		style(type="text/css")
			* {
				margin: 0;
				padding: 0;
			}
			html, body {
				width: 100%;
				height: 100%;
				font: 200 25px/1.5 Helvetica Neue, Helvetica, Sans-Serif;
				-webkit-font-smoothing: antialiased;
				position: relative;
			}
			h1 {
				font-size: 30px;
				font-weight: 400;
				margin: 0 0 10px;
				color: #555;
			}
			h1 a{
				color: #555;
			}
			p, a {
				color: #999;
				text-decoration: none;
			}
			p {
				margin-left: 100px;;
				font-size: 0.8em;
				margin-top: 1.0em;
			}
			a:hover {
				color: #5ba2ee;
			}
			.center {
				margin: 0 0 0 100px;
				position: relative;
				top: 45%;
				-webkit-transform: translateY(-50%);
				-moz-transform: translateY(-50%);
				-ms-transform: translateY(-50%);
				-o-transform: translateY(-50%);
				transform: translateY(-50%);
			}
			.back {
				position: fixed;
				right: 15px;
				bottom: 10px;
				font-size: 0.7em;

			}
			.back a {
				color: #acacac;
			}
			@media only screen and (max-width: 320px) {
				body {
					padding: 30px;
				}
				.center {
					margin-left: 0;
				}
			}
	body
